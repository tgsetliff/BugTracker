@model BugTracker.Models.RegisterViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Register";
}


<div class="container" style="margin-top:100px;">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                @*@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))*@
                @using (Html.BeginForm("Register", "Account", FormMethod.Post,
                    new { encType = "multipart/form-data", name = "myform", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-md-12">
                        <div class="panel panel-info">
                            <div class="panel-heading text-center">
                                <span>Create a new account.</span>
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="panel-body">
                                <div class="form-group">
                                    <div class="row">
                                        <label for="firstname" class="col-md-3">
                                            First Name:
                                        </label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", id = "FirstName", placeholder = "Enter First name" })
                                        </div>
                                        <div class="col-md-1">
                                            <i class="fa fa-lock fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label for="lastname" class="col-md-3">
                                            Last Name:
                                        </label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", id = "LastName", placeholder = "Enter last name" })
                                        </div>
                                        <div class="col-md-1">
                                            <i class="fa fa-lock fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label for="emailaddress" class="col-md-3">
                                            Email Address:
                                        </label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "Email", placeholder = "Enter email address" })
                                            <p class="help-block">
                                                Example: yourname@domain.com
                                            </p>
                                        </div>
                                        <div class="col-md-1">
                                            <i class="fa fa-lock fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label for="password" class="col-md-3">
                                            Password:
                                        </label>
                                        <div class="col-md-8">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "Password", placeholder = "Enter Password" })
                                            <p class="help-block">
                                                Min: 6 characters (Alphanumeric only)
                                            </p>
                                        </div>
                                        <div class="col-md-1">
                                            <i class="fa fa-lock fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label for="connfirmpassword" class="col-md-3">
                                            Confirm Password:
                                        </label>
                                        <div class="col-md-8">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "ConfirmPassword", placeholder = "Confirm Password" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <input type="submit" class="btn btn-primary" value="Register" />
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
