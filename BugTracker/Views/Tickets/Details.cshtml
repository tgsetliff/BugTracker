@model BugTracker.Models.Ticket
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = " Ticket Details";
}

<div class="container">  
    <br />
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</div>
<div class="row">
    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading" style="height:90px">
                <div class="col-md-12 text-center">
                    <h3>@Html.DisplayFor(model => model.Title)</h3>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-4"></div>
                        <div class="col-md-2">
                            @{var ownerName = Model.OwnerUser.FirstName + ' ' + Model.OwnerUser.LastName;}
                            @Html.Raw(ownerName)
                        </div>
                        <div class="col-md-1">
                            @Html.DisplayFor(model => model.CreateDate)
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-title">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.ProjectId, "Project", htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.LabelFor(model => model.TicketStatusId, "Status", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.LabelFor(model => model.TicketPriorityId, "Priority", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.LabelFor(model => model.TicketTypeId, "Ticket Type", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.LabelFor(model => model.AssignedToUserId, "Assigned To", htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-3">
                            @Html.DisplayFor(model => model.Project.Name)
                        </div>

                        <div class="col-md-2">
                            @Html.DisplayFor(model => model.TicketStatus.Name)
                        </div>
                        <div class="col-md-2">
                            @Html.DisplayFor(model => model.TicketPriority.Name)
                        </div>
                        <div class="col-md-2">
                            @Html.DisplayFor(model => model.TicketType.Name)
                        </div>
                        <div class="col-md-2">
                            @if (Model.AssignedToUserId != null)
                            {
                                var assignedUser = Model.AssignedToUser.FirstName + ' ' + Model.AssignedToUser.LastName;
                                @Html.Raw(assignedUser)
                            }
                            else
                            {
                                @Html.DisplayFor(model => model.AssignedToUser.FirstName)
                            }

                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <h5>@Html.DisplayFor(model => model.Description)</h5>
                </div>
            </div>
        </div>
    </div>    
</div>
    
@* Comments panel *@
<div class="row">
        <div class="container">
            <div class="panel panel-primary">
                <div class="panel-heading text-center">
                    <div class="col-md-12">
                        <div class="col-md-5"></div>
                        <div class="col-md-1"><h4>Comments</h4></div>
                        <div class=" col-md-4"></div>
                        <div class="col-md-2">
                            <div id="newtab-grid" style="height: 50px; max-width: 140px;">
                                <ol class="breadcrumb">
                                    <li><a href="@Url.Action("Create", "TicketComments", new { id = Model.Id, Model.Title })">Add Comment</a></li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-title">
                    <div class="col-md-12">
                        <div class="col-md-2">
                            <h4>Date</h4>
                        </div>
                        <div class="col-md-2">
                            <h4>By</h4>
                        </div>
                        <div class="col-md-2">
                            <h4>Comment</h4>
                        </div>
                    </div>                    
                </div>
                <div class="panel-body">                
                    @foreach (var c in Model.Comments.OrderByDescending(m => m.CreateDate))
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    @Html.DisplayFor(model => c.CreateDate)
                                </div>
                                <div class="col-md-2">
                                    @{var userName = c.User.FirstName + ' ' + c.User.LastName;}
                                    @Html.Raw(userName)
                                </div>
                                @if (c.Comment.Length > 80)
                                {
                                    <div class="col-md-5">
                                        {var comment = c.Comment.Substring(0, 80) + "...";}
                                        @Html.Raw(comment)
                                    </div>
                                    <div class="col-md-2">
                                        <div id="newtab-grid" style="height: 40px; max-width: 90px;">
                                            <ol class="breadcrumb">
                                                <li><a href="@Url.Action("Details", "TicketComments", new { id = Model.Id})">Show More</a></li>
                                            </ol>
                                        </div>
                                    </div>
                                }
                            </div>                                                     
                        </div>
                    }
                </div>
            </div>
        </div>
</div>

@*  Attachments *@
<div class="row">
    <div class="container">            
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="col-md-12">
                    <div class="col-md-5"></div>
                    <div class="col-md-1"><h4>Attachments</h4></div>
                    <div class=" col-md-4"></div>
                    <div class="col-md-2">
                        <div id="newtab-grid" style="height: 50px; max-width: 140px;">
                            <ol class="breadcrumb">
                                <li><a href="@Url.Action("Create", "TicketAttachments", new { id = Model.Id, Model.Title })">Add Attachment</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-title">
                <div class="col-md-12">
                    <div class="col-md-2">
                        <h4>Date</h4>
                    </div>
                    <div class="col-md-2">
                        <h4>By</h4>
                    </div>
                    <div class="col-md-6">
                        <h4>Description</h4>
                    </div>
                    <div class="col-md-2">
                        <h4>Attachment</h4>
                    </div>
                </div>                    
            </div>
            <div class="panel-body">
                @foreach (var c in Model.Attachments.OrderByDescending(m => m.TicketId))
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-2">
                                @Html.DisplayFor(modelItem => c.CreateDate)
                            </div>
                            <div class="col-md-2">
                                @{var userName = c.User.FirstName + ' ' + c.User.LastName;}
                                @Html.Raw(userName)
                            </div>
                            <div class="col-md-6">
                                @Html.DisplayFor(modelItem => c.Description)
                            </div>
                            <div class="col-md-2">
                                @{var filePath = c.FilePath;}
                                <a href="URL?filePath" class="btn btn-primary btn-md">VIEW</a>
                            </div>
                        </div>
                    </div>
                }
            </div>          
        </div>
    </div>
</div>

@* History *@
<div class="row">
    <div class="container">            
        <div class="panel panel-primary">
            <div class="panel-heading text-center">
                <h4>History</h4>
            </div>
            <div class="panel-title">
                <div class="col-md-12">
                    <div class="col-md-2">
                        <h4>Date</h4>
                    </div>
                    <div class="col-md-2">
                        <h4>By</h4>
                    </div>
                    <div class="col-md-2">
                        <h4>Property</h4>
                    </div>
                    <div class="col-md-3">
                        <h4>Old Value</h4>
                    </div>
                    <div class="col-md-3">
                        <h4>New Value</h4>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                @foreach (var c in Model.History.OrderByDescending(m => m.ChangeDate))
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-2">
                                @Html.DisplayFor(modelItem => c.ChangeDate)
                            </div>
                            <div class="col-md-2">
                                @{var userName = c.User.FirstName + ' ' + c.User.LastName;}
                                @Html.Raw(userName)
                            </div>
                            <div class="col-md-2">
                                @Html.DisplayFor(modelItem => c.Property)
                            </div>
                            <div class="col-md-3">
                                @Html.DisplayFor(modelItem => c.OldValue)
                            </div>
                            <div class="col-md-3">
                                @Html.DisplayFor(modelItem => c.NewValue)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <hr />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <br />
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
