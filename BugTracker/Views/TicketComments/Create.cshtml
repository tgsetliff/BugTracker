@model BugTracker.Models.TicketComment

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "TicketComments", FormMethod.Post,
    new { encType = "multipart/form-data", name = "myform" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
         @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <h4>
                    @Html.DisplayFor(model => model.Ticket.Title, new { htmlAttributes = new { @class = "form-control"} })
                </h4>
                
                @Html.HiddenFor(model => model.TicketId)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="row">
                <div class="col-md-10">
                    <textarea name="Comment" autofocus></textarea>
                    @*@Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control", autofocus="autofocus" } })*@
                    @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                </div>
            </div>
            
        </div>
        <div class="form-group">
            <div class="col-md-1">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
