@using BugTracker.Models;
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Home Page";
}

<div id="wrapper">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul id="active" class="nav navbar-nav side-nav">
                <li class="selected"><a href="#"> Home</a></li>                
                <li><a href="/Projects/Index"> Projects</a></li>
                <li><a href="/Tickets/Index"> Tickets</a></li>

                <li><a href="/RoleManagement/ListRoles"> Roles</a></li>
                
            </ul>
            @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()
                        <ul class="nav navbar-nav navbar-right navbar-user">
                            <li>
                                @Html.ActionLink(User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                            </li>
                            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                        </ul>
                    }
                }
               else
               {
                <ul class="nav navbar-nav navbar-right navbar-user">
                    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                </ul>
               }

        </div>
    </nav>
</div>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-5"></div>
            <div class="col-md-4">
                <h1>Bug Tracker</h1>
            </div>                
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-4"></div>
                <div class="col-md-6">
                    <h1><small>Bug Reporting and Tracking System</small></h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <h1></h1>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-5"></div>
            <img src="~/Image/dolibarr_bug.png" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p>
                The Bug Tracker Software Application is a reporting tool for submitting and tracking application issues. It consists of 
                Projects and Tickets that apply to a specific application or area of an application.
            </p>
            <p>
                Tickets are submitted by users to report one particular problem. Submitted tickets are reviewed by a Project Manager and assigned to a
                developer or team of developers to be worked on. The developer or team will be notified when a new ticket has been assigned.
                They will investigate the issue by contacting the user to get any specifics necessary to replicate the problem. Once a solution has
                been determined, the necessary modifications will be made to the application. Any required testing will be performed to ensure
                that the issue does not reoccur.
            </p>
            <p>
                The user will be notified that changes have been made so that they can evaluate the solution and confirm the issue does not
                continue to exist. Once the user is satisfied that the problem is corrected, they will update the status of the ticket to
                Submitter Approved. When this is done, the Project Manager will be notified that the user has reviewed and approved the changes.
                The Project Manager will then change the status to Resolved.
            </p>
        </div>
    </div>
</div>

