@model BugTracker.Models.ProjectUserViewModel
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Project Details";
}

<div class="container" style="margin-top:100px;">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        @Html.DisplayFor(model => model.ProjectName)
                    </div>
                    <div class="panel-body">
                        @Html.ListBoxFor(model => model.AssignedUsers, Model.AssignedUsers as MultiSelectList, new { htmlAttributes = new { @class = "form-control" }, disabled = "disabled" })
                    </div>
                    <div class="panel-footer">
                        @if (User.IsInRole("Admin") || User.IsInRole("PM"))
                        {<a href="@Url.Action("Edit", new { Id = Model.ProjectId })" class="btn btn-primary btn-md">Edit</a>}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

