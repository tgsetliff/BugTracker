@model BugTracker.Models.CreateProjectUserViewModel
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Create Project";
}

<div class="container">

    @using (Html.BeginForm("Create", "Projects", FormMethod.Post,
    new { encType = "multipart/form-data", name = "myform" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>New Project</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control", autofocus = "autofocus" } })
                    @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    @Html.Label("Unassigned Users", htmlAttributes: new { @class = "control-label col-md-4" })
                    @Html.ListBoxFor(model => model.UsersIn, Model.UnAssignedUsers as MultiSelectList, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UsersIn, "", new { @class = "text-danger" })
                    @if (ViewBag.Message != null)
                    {
                        <br />
                        <div class="text-danger">@ViewBag.Message</div>
                    }
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        <a href="@Url.Action("Index")" class="btn btn-primary btn-xs">Back</a>
    </div>

</div>
