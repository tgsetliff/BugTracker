@model BugTracker.Models.RegisterViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Register";
}

<div id="wrapper">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul id="active" class="nav navbar-nav side-nav">
                <li><a href="/Home/Index"> Home</a></li>
                <li><a href="/Projects/Index"> Projects</a></li>
                <li><a href="/Tickets/Index"> Tickets</a></li>
                <li class="divider"></li>
                <li><a href="/RoleManagement/ListRoles"> Roles</a></li>
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="selected"><a href="#">Register</a></li>
                }
            </ul>
            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                    @Html.AntiForgeryToken()
                    <ul class="nav navbar-nav navbar-right navbar-user">
                        <li>
                            @Html.ActionLink(User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </li>
                        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                    </ul>
                }
            }
            else
            {
                <ul class="nav navbar-nav navbar-right navbar-user">
                    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                </ul>
            }
        </div>
    </nav>
</div>
    <div id="page-wrapper">
        <div class="row text-center">
            <h2>New Registration</h2>
        </div>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Create a new account.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div>
                    <label for="firstname" class="col-md-2">
                        First Name:
                    </label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", id = "FirstName", placeholder = "Enter First name" })
                    </div>
                    <div class="col-md-1">
                        <i class="fa fa-lock fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label for="lastname" class="col-md-2">
                        Last Name:
                    </label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", id = "LastName", placeholder = "Enter last name" })
                    </div>
                    <div class="col-md-1">
                        <i class="fa fa-lock fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label for="emailaddress" class="col-md-2">
                        Email address:
                    </label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "Email", placeholder = "Enter email address" })
                        <p class="help-block">
                            Example: yourname@domain.com
                        </p>
                    </div>
                    <div class="col-md-1">
                        <i class="fa fa-lock fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label for="password" class="col-md-2">
                        Password:
                    </label>
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "Password", placeholder = "Enter Password" })
                        <p class="help-block">
                            Min: 6 characters (Alphanumeric only)
                        </p>
                    </div>
                    <div class="col-md-1">
                        <i class="fa fa-lock fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label for="connfirmpassword" class="col-md-2">
                        Confirm Password:
                    </label>
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "ConfirmPassword", placeholder = "Confirm Password" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
        }
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
