@model BugTracker.Models.Ticket
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Ticket Create";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Create", "Tickets", FormMethod.Post,
                new { encType = "multipart/form-data", name = "myform" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div class="row">
                                @Html.LabelFor(model => model.Title, "Title", htmlAttributes: new { @class = "control-label col-md-1" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", autofocus = "autofocus", required = "required", placeholder = "Enter Ticket Title"}})
                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-4"></div>
                                <div class="col-md-1">
                                    <input type="submit" value="Create" class="btn btn-primary pull-left" />
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(model => model.Description, "Description", htmlAttributes: new { @class = "control-label col-md-1" })
                            </div>
                            <div class="row">
                                <div class="col-md-10">
                                    <textarea name="Description" required placeholder="Enter Ticket Description">@Html.DisplayTextFor(model => model.Description)</textarea>
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(model => model.ProjectId, "Project", htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.LabelFor(model => model.TicketStatusId, "Status", htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.LabelFor(model => model.TicketPriorityId, "Priority", htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.LabelFor(model => model.TicketTypeId, "Ticket Type", htmlAttributes: new { @class = "control-label col-md-3" })
                                @*@Html.LabelFor(model => model.AssignedToUserId, "Assigned To", htmlAttributes: new { @class = "control-label col-md-2" })*@
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    @Html.DropDownList("ProjectId", ViewBag.ProjectId as SelectList, "-- Select --", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-3">
                                    @Html.DropDownList("TicketStatusId", ViewBag.TicketStatusId as SelectList, "-- Select --", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TicketStatusId, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-3">
                                    @Html.DropDownList("TicketPriorityId", ViewBag.TicketPriorityId as SelectList, "-- Select --", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TicketPriorityId, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-3">
                                    @Html.DropDownList("TicketTypeId", ViewBag.TicketTypeId as SelectList, "-- Select --", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TicketTypeId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row col-md-1">
                                <br />
                                <a class="btn btn-primary btn-md" href="@Url.Action("Index")">Back</a>
                            </div>
                        </div>
                        
                        
                        
                    </div>
                    
                </div>
            }

            
        </div>
    </div>
</div>